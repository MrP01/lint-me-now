{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "djangourl": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/", "stuff/", "scripts/", "resources/", "static/", "webpack/", "tasks/", "build/"],
  "rules": {
    "indent": ["error", 2],
    "max-len": [
      "warn",
      {
        "code": 120
      }
    ],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "eol-last": ["error", "always"]
  }
}
